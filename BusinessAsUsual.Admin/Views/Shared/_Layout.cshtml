<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Business As Usual Admin Portal">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Business As Usual</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          crossOrigin="anonymous"
          referrerPolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/form.css" />
    <link rel="stylesheet" href="~/css/hero.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/markdown.css" />
    <link rel="stylesheet" href="~/css/theme.css" />
    <script src="~/js/ThemeSwitcher.js"></script>
    <script src="~/js/menuSystem.js"></script>
</head>
<body>
    <div id="loading-screen" class="loading-screen">
        <div class="spinner"></div>
    </div>
    @await Html.PartialAsync("_Header")
    <div class="layout-container">
        @await Html.PartialAsync("_Sidebar")
        <main id="main-content" class="main-content">
            @RenderBody()
        </main>
    </div>
    @await Html.PartialAsync("_Footer")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    globalThis.addEventListener("DOMContentLoaded", async () => {
        try {
            await globalThis.loadMenuJson(); // ✅ now properly awaited
        } catch (err) {
            console.warn("[SmartCommit] Menu JSON load failed during startup", err);
        }

        const loader = document.getElementById("loading-screen");
        if (loader) loader.style.display = "none";
    });
</script>