@{
    Layout = "_LandingLayout";
    ViewData["Title"] = "Welcome";
}

<div class="row mb-4">
    <div class="col-md-7">
        <div class="mb-3">
            <div class="landing-logo text-uppercase text-primary">
                <i class="fas fa-wave-square me-2"></i> Business As Usual
            </div>
            <p class="landing-tagline mt-2">
                Your operations console for companies, users, and system health.
            </p>
        </div>
        <div class="landing-cta d-flex flex-wrap gap-2">
            <a href="/Admin/Dashboard" class="btn btn-primary btn-lg">
                <i class="fas fa-tachometer-alt me-2"></i> Enter Admin Console
            </a>
            <a href="/Admin/Dashboard#health" class="btn btn-outline-light btn-lg">
                <i class="fas fa-heartbeat me-2"></i> View System Health
            </a>
        </div>
    </div>
    <div class="col-md-5 d-flex align-items-center justify-content-md-end mt-4 mt-md-0">
        <div class="text-md-end">
            <span class="badge bg-success mb-2">
                <i class="fas fa-circle me-1"></i> Live Environment Ready
            </span>
            <p class="mb-1">Monitor infrastructure, audit changes, and keep operations… business as usual.</p>
            <p class="mb-0 text-muted" style="font-size: 0.85rem;">
                Designed for operators, contributors, and curious architects.
            </p>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-3">
        <div class="feature-card">
            <div class="d-flex align-items-center mb-2">
                <i class="feature-icon fas fa-heartbeat me-2"></i>
                <span class="feature-title">Health & Diagnostics</span>
            </div>
            <p class="feature-desc">
                Live CPU, memory, disk, and uptime stats for your BAU environment.
            </p>
            <a href="/Admin/Dashboard" class="stretched-link text-decoration-none text-info">
                Open Dashboard <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="feature-card">
            <div class="d-flex align-items-center mb-2">
                <i class="feature-icon fas fa-building me-2"></i>
                <span class="feature-title">Company Management</span>
            </div>
            <p class="feature-desc">
                Provision, merge, and audit companies with a clear operational trail.
            </p>
            <a href="/admin/company/provision" class="stretched-link text-decoration-none text-info">
                Manage Companies <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="feature-card">
            <div class="d-flex align-items-center mb-2">
                <i class="feature-icon fas fa-users me-2"></i>
                <span class="feature-title">User Management</span>
            </div>
            <p class="feature-desc">
                Add users, assign roles, and keep access aligned with reality.
            </p>
            <a href="/admin/user/manage" class="stretched-link text-decoration-none text-info">
                Manage Users <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="feature-card">
            <div class="d-flex align-items-center mb-2">
                <i class="feature-icon fas fa-scroll me-2"></i>
                <span class="feature-title">Logs & Metrics</span>
            </div>
            <p class="feature-desc">
                Surface Serilog, CloudWatch, and system events in one place.
            </p>
            <a href="/admin/logs" class="stretched-link text-decoration-none text-info">
                View Logs <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
</div>