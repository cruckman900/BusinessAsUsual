<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BAU Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="icon" href="/favicon.ico" />
</head>
<body>
    <header class="bg-dark text-white p-3">
        <div class="container d-flex align-items-center">
            <img src="/images/logo.png" alt="BAU Icon" width="32" class="me-2" />
            <h4 class="mb-0">Business As Usual Admin</h4>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 bg-light sidebar py-4">
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Index">Provision Company</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Companies">Company List</a></li>
                </ul>
            </nav>

            <main class="col-md-10 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <small>© 2025 Business As Usual. All rights reserved.</small>
    </footer>
</body>
</html>