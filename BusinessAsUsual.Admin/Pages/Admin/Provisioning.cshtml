@page
@model MyApp.Namespace.ProvisioningModel
@{
    ViewData["Title"] = "Provisioning";
}

<h2>Provisioning</h2>

<button class="btn btn-primary" onclick="ShowModal()">StartProvisioning</button>

<partial name="_ProvisioningModal" />

@section Scripts {
    <script>
        function ShowModal() {
            const modal = document.getElementById('provisioningModal');
            if (modal) {
                modal.showModal(); // if using <dialog>
            }
        }
    </script>
}
