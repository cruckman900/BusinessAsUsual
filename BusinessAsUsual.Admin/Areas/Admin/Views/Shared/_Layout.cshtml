<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Business As Usual Admin Portal">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Business As Usual</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          crossOrigin="anonymous"
          referrerPolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/form.css" />
    <link rel="stylesheet" href="~/css/hero.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/theme.css" />
    <script src="~/js/ThemeSwitcher.js"></script>
</head>
<body>
    <partial name="_Header" />
    <div class="layout-container">
        <partial name="_Sidebar" />
        <main id="main-content" class="main-content">
            @RenderBody()
        </main>
    </div>
    <partial name="_Footer" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    window.menuData = {};

    async function loadMenuJson() {
      if (!window.menuData || Object.keys(window.menuData).length === 0) {
        const response = await fetch('/config/menu.json');
        window.menuData = await response.json();
      }
    }
</script>

<script>
    window.onload = async function () {
      // Check current path and render sidebar accordingly
      const currentPath = window.location.pathname;
      const defaultCategory = currentPath === "/" ? "Home" : "Companies";
      renderSidebar(defaultCategory);
    };
</script>