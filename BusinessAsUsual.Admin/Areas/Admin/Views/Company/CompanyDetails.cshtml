@using BusinessAsUsual.Admin.Areas.Admin.Models
@model Company

<section class="company-details">
    <h2>@Model.Name</h2>
    <dl>
        <dt>Database Name</dt>
        <dd>@Model.DbName</dd>

        <dt>Admin Email</dt>
        <dd>@Model.AdminEmail</dd>

        <dt>Billing Plan</dt>
        <dd>@Model.BillingPlan</dd>

        <dt>Modules Enabled</dt>
        <dd>@Model.ModulesEnabled</dd>

        <dt>Created</dt>
        <dd>@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
    </dl>

    <a href="/admin/company/edit/@Model.Id" class="btn btn-primary">Edit</a>
    <a href="/admin/company/view" class="btn btn-secondary">Back to List</a>
</section>