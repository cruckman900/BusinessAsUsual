@model BusinessAsUsual.Admin.Areas.Admin.Models.Company

<form asp-area"Admin" asp-controller="Company" asp-action="ProvisionCompany" method="post">
    <input asp-for="Name" id="CompanyName" placeholder="Company Name" />
    <input asp-for="AdminEmail" id="AdminEmail" placeholder="Admin email" />
    <input asp-for="BillingPlan" id="BillingPlan" placeholder="Billing Plan" />
    <input asp-for="ModulesEnabled" id="ModulesEnabled" placeholder="Modules (comma-separated)" />
    <button type="submit">Provision</button>
</form>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="error">@error.ErrorMessage</div>
}