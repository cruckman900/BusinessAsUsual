@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Business As Usual";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - Business As Usual</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <style>
        body {
            background: radial-gradient(circle at top, #1f2937, #020617);
            color: #e5e7eb;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .landing-hero {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem 1rem;
        }
        .landing-card {
            background: rgba(15, 23, 42, 0.9);
            border-radius: 1rem;
            box-shadow: 0 20px 40px rgba(0,0,0,0.6);
            padding: 2.5rem;
            max-width: 1100px;
            width: 100%;
        }
        .landing-logo {
            font-size: 2.5rem;
            font-weight: 700;
            letter-spacing: 0.08em;
        }
        .landing-tagline {
            font-size: 1.1rem;
            color: #9ca3af;
        }
        .landing-cta .btn {
            min-width: 200px;
        }
        .feature-card {
            position: relative;
            background: rgba(15, 23, 42, 0.85);
            border-radius: 0.75rem;
            border: 1px solid rgba(148, 163, 184, 0.3);
            padding: 1.25rem;
            height: 100%;
            transition: transform 0.15s ease, box-shadow 0.15s ease, border-color 0.15s ease;
        }
        .feature-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 30px rgba(0,0,0,0.6);
            border-color: #38bdf8;
        }
        .feature-icon {
            font-size: 1.5rem;
            color: #38bdf8;
        }
        .feature-title {
            font-weight: 600;
        }
        .feature-desc {
            font-size: 0.9rem;
            color: #9ca3af;
        }
        footer {
            padding: 0.75rem 1rem;
            font-size: 0.8rem;
            color: #6b7280;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="landing-hero">
        <div class="landing-card">
            @RenderBody()
        </div>
    </div>
    <footer>
        Business As Usual &mdash; Admin Console &middot; @DateTime.UtcNow.ToString("yyyy")
    </footer>
</body>
</html>