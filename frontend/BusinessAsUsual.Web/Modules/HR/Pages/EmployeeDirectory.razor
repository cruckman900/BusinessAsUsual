@page "/hr/directory"

@inherits HRLandingBase
@inject PageHeaderService HeaderService

@using BusinessAsUsual.Web.Modules.HR.Services
@using BusinessAsUsual.Web.Modules._Shared
@inject IHRService HRService

<MudTable Items="_employees">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Department</MudTh>
        <MudTh>Email</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Department">@context.Department</MudTd>
        <MudTd DataLabel="Email">@context.Email</MudTd>
    </RowTemplate>
</MudTable>

@code {
    private IEnumerable<Employee> _employees = Enumerable.Empty<Employee>();

    private RenderFragment HeaderContent =>@<PageHeader Title="Employee Directory"
            Description="Browse and manage employee records."
            Breadcrumbs="@(BuildBreadCrumbs("Employee Directory"))" />
    ;

    protected override async Task OnInitializedAsync()
    {
        _employees = await HRService.GetEmployeesAsync();
        HeaderService.SetHeader(HeaderContent);
    }
}
