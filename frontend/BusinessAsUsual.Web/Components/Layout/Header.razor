@code {
    [Parameter] public EventCallback OnToggleSidebar { get; set; }
    [Parameter] public bool IsDark { get; set; }

    private async Task ToggleSidebar()
    {
        if (OnToggleSidebar.HasDelegate)
            await OnToggleSidebar.InvokeAsync();
    }
}

<header class="d-flex justify-content-between align-items-center px-3 py-2 @(IsDark ? "bg-dark text-light" : "bg-primary text-white") shadow">
    <h1 class="h5 mb-0">Business As Usual</h1>

    <ThemeToggle />
</header>