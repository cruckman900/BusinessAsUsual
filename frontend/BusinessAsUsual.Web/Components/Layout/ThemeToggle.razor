<button @onclick="ToggleTheme"
        class="btn btn-outline-light rounded-circle"
        title="Toggle theme">
    @CurrentIcon
</button>

@code {
    private bool isDark = true;

    private string CurrentIcon => isDark ? "☀️" : "🌙";

    private async Task ToggleTheme()
    {
        try
        {
            isDark = !isDark;

            if (JS is not null)
            {
                await JS.InvokeVoidAsync("toggleBootstrapTheme", isDark);
            }
            
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"JS error: {ex.Message}");
        }
    }

    [Inject] private IJSRuntime JS { get; set; } = default!;
}