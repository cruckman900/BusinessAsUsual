<nav class="navbar navbar-expand-lg navbar-zone @(IsDark ? "navbar-dark bg-dark" : "navbar-light bg-primary") px-3 py-2">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-3">
            <button class="btn btn-outline-light d-flex align-items-center gap-2"
                    @onclick="OnToggleSidebar">
                <span class="navbar-toggler-icon"></span>
                <span>@(SidebarLabel)</span>
            </button>

            <a class="navbar-brand fw-bold text-warning" href="/">Business As Usual</a>
        </div>

        <div class="navbar-collapse">
            <ul class="navbar-nav d-flex flex-row gap-3">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/">Home</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/about">About</NavLink>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ActiveSidebarSection == "HR" ? "active" : "")"
                       href="#"
                       @onclick="TriggerHRSection">
                        Human Resources
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    [CascadingParameter] public string ActiveSidebarSection { get; set; } = "Main";
    [Parameter] public EventCallback<string> OnSectionSelected { get; set; }
    [Parameter] public EventCallback OnToggleSidebar { get; set; }
    [Parameter] public required string SidebarLabel { get; set; }
    [Parameter] public bool IsDark { get; set; }

    private Task TriggerHRSection() => OnSectionSelected.InvokeAsync("HR");
}